datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

enum NivelRiesgo {
  bajo
  medio
  alto
}

model Product {
  id String @id @unique
  nombre String
  nombre_busqueda String
  codigo String
  tipo String
  descripcionCorta String
  descripcion_corta_busqueda String
  descripcionLarga String
  descripcion_larga_busqueda String
  moneda String
  riesgo NivelRiesgo
  tasaInteresAnual Float?
  rentabilidadEsperadaAnual Float?
  plazoMeses Int?
  liquidezDias Int?
  saldoMinimo Int?
  montoApertura Int?
  montoMinimo Int
  destacado Boolean @default(false)
  tags String
}

model Lead {
  id String @id @unique
  name String
  email String
  documentType String
  documentNumber String
  createdAt DateTime
}